public class DrawTriangleMethod {
    public static void main(String[] args) {
        drawTriangle(10);
    }
   public static void drawTriangle(int N) {
      int i = 1;
      while(i<= N) {
         for(int m = 1; m <= i; m++) {
             System.out.print('*');
         }
         System.out.println(' ');
         i++;
      }

   }
}
